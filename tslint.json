{
  "extends": [
    "tslint:recommended"
  ],
  "rules": {
    "variable-name": [
      true,
      "allow-pascal-case"
    ],
    "interface-name": [
      false
    ],
    "space-before-function-paren": [
      true,
      {
        "anonymous": "always",
        "named": "never",
        "asyncArrow": "always"
      }
    ],
    "quotemark": [
      true, "single", "avoid-escape"
    ],
    "object-literal-sort-keys": [
      false
    ],
    "no-var-requires": false,
    "max-line-length": [
      true,
      {
        "limit": 120,
        "ignore-pattern": "^import |^export {(.*?)}|^test"
      }
    ],
    "trailing-comma": [
      true,
      {
        "multiline": {
          "objects": "always",
          "arrays": "always",
          "functions": "never",
          "typeLiterals": "ignore"
        },
        "esSpecCompliant": true
      }
    ]    
  }
}